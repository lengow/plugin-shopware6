<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <services>

        <!-- Entity -->

        <service id="Lengow\Connector\Entity\Lengow\Action\ActionDefinition">
            <tag name="shopware.entity.definition" entity="lengow_action" />
        </service>

        <service id="Lengow\Connector\Entity\Lengow\Order\OrderDefinition">
            <tag name="shopware.entity.definition" entity="lengow_order" />
        </service>

        <service id="Lengow\Connector\Entity\Lengow\OrderError\OrderErrorDefinition">
            <tag name="shopware.entity.definition" entity="lengow_order_error" />
        </service>

        <service id="Lengow\Connector\Entity\Lengow\OrderLine\OrderLineDefinition">
            <tag name="shopware.entity.definition" entity="lengow_order_line" />
        </service>

        <service id="Lengow\Connector\Entity\Lengow\Product\ProductDefinition">
            <tag name="shopware.entity.definition" entity="lengow_product" />
        </service>

        <service id="Lengow\Connector\Entity\Lengow\Settings\SettingsDefinition">
            <tag name="shopware.entity.definition" entity="lengow_settings" />
        </service>

        <!-- Actual service -->

        <service id="Lengow\Connector\Service\LengowPayment">
            <argument type="service" id="Shopware\Core\Checkout\Order\Aggregate\OrderTransaction\OrderTransactionStateHandler"/>
            <tag name="shopware.payment.method.sync" />
        </service>

        <service id="Lengow\Connector\Service\LengowAccess">
            <argument type="service" id="lengow_settings.repository"/>
            <argument type="service" id="Shopware\Core\System\SystemConfig\SystemConfigService" />
        </service>

        <!-- Front Controller -->

        <service id="Lengow\Connector\Storefront\Controller\LengowExportController">
            <argument type="service" id="Lengow\Connector\Service\LengowAccess"/>
            <argument type="service" id="Shopware\Core\System\SystemConfig\SystemConfigService" />
            <tag name="controller.service_arguments"/>
        </service>

        <service id="Lengow\Connector\Storefront\Controller\LengowCronController">
            <argument type="service" id="Lengow\Connector\Service\LengowAccess"/>
            <argument type="service" id="Shopware\Core\System\SystemConfig\SystemConfigService" />
            <tag name="controller.service_arguments"></tag>
        </service>

    </services>
</container>
