{% block lgw_connection_home %}
    <sw-card class="lgw-connection-home">
        <div class="lgw-content-section">
            <div class="lgw-text-center lgw-logo">
                <img :src="assetFilter('lengowconnector/lengow-blue.png')" alt="lengow">
            </div>
            <p class="lgw-text-center">
                {{ $tc('lengow-connector.connection.home.description_first') }}
            </p>
            <p class="lgw-text-center">
                {{ $tc('lengow-connector.connection.home.description_second') }}
            </p>
            <p class="lgw-text-center">
                {{ $tc('lengow-connector.connection.home.description_third') }}
            </p>
        </div>
        <div class="lgw-module-illu">
            <img :src="assetFilter('lengowconnector/connected-shopware.png')" class="lgw-module-illu-module" alt="">
            <img :src="assetFilter('lengowconnector/connected-lengow.png')" class="lgw-module-illu-lengow" alt="">
            <img :src="assetFilter('lengowconnector/plug-grey.png')" class="lgw-module-illu-plug" alt="">
        </div>
        <p class="lgw-text-center">
            {{ $tc('lengow-connector.connection.home.description_fourth') }}
        </p>
        <div class="lgw-text-center">
            <routerLink class="lgw-btn" :to="{ name: 'lengow.connector.connection.cms' }">
                {{ $tc('lengow-connector.connection.home.button') }}
            </routerLink>
            <br/>
            <p>
                {{ $tc('lengow-connector.connection.home.no_account') }}
