                            <br/>
                            <span>{{ $tc('lengow-connector.legals.cnil_declaration') }} 1748784 v 0</span>
                            <br/>
                            <span>{{ $tc('lengow-connector.legals.company_registration_number') }} 513 381 434</span>
                            <br/>
                            <span>{{ $tc('lengow-connector.legals.vat_identification_number') }} FR42513381434</span>
                        </div>
                    {% endblock %}
                    {% block lgw_legal_notices_content_company_contact %}
                        <div>
                            <br/><br/>
                            <h3>{{ $tc('lengow-connector.legals.address') }}</h3>
                            <span>6 rue René Viviani 44200 Nantes</span>
                            <br/><br/><br/>
                        </div>
                        <div>
                            <h3>{{ $tc('lengow-connector.legals.contact') }}</h3>
                            <span>Email : contact@lengow.com<br/>Phone: +33 (0)2 85 52 64 14</span>
                            <br/><br/><br/>
                        </div>
                        <div>
                            <h3>{{ $tc('lengow-connector.legals.hosting') }}</h3>
                            <span>OXALIDE<br/>RCS Paris : 803 816 529<br/>25 Boulevard de Strasbourg – 75010 Paris<br/>+33 (0)1 75 77 16 66</span>
                        </div>
