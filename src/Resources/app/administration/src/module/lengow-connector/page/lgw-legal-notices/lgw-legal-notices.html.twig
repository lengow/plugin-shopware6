                {% block lgw_legal_notices_smart_bar_header_title %}
                    <h2>
                        {% block lgw_legal_notices_smart_bar_header_title_text %}
                            {{ $tc('lengow-connector.page.legal_notices') }}
                            <lgw-debug-warning></lgw-debug-warning>
                        {% endblock %}
                    </h2>
                {% endblock %}
            </template>
        {% endblock %}
        {% block lgw_legal_notices_content %}
            <template #content>
            <sw-card-view>
                <sw-card>
                    {% block lgw_legal_notices_content_company_infos %}
                        <div><br/>
                            <h3>SAS Lengow</h3>
                            <span>{{ $tc('lengow-connector.legals.simplified_company') }}</span>
                            <br/>
