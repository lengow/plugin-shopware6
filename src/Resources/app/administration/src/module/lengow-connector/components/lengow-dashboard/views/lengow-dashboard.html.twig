{% block lengow_dashboard %}
    <template v-if="!isNew && !isLoading">
        <sw-page class="lgw-page" :showSearchBar="false">
            {% block lgw_dashboard_smart_bar_header %}
                <template #smart-bar-header>
                    {% block lgw_dashboard_smart_bar_header_title %}
                        <h2>
                            {% block lgw_dashboard_smart_bar_header_title_text %}
                                {{ $tc('lengow-connector.page.dashboard') }}
                                <lgw-debug-warning></lgw-debug-warning>
                                <lgw-update-warning></lgw-update-warning>
                                <lgw-free-trial-warning :setTrialExpired="setTrialExpired"></lgw-free-trial-warning>
                            {% endblock %}
                        </h2>
                    {% endblock %}
                </template>
            {% endblock %}
            {% block lgw_dashboard_content %}
                <template #content>
                    <div class="lgw-page">
                        <div class="lgw-container">
                            <div class="lgw-row">
                                <div class="lgw-box lgw-home-header text-center lgw-home-header-margin">
                                    <img :src="'connector/lengow-white-big.png' | asset" alt="lengow" class="img-responsive">
                                    <h1 style="color: white">{{ $tc('lengow-connector.dashboard.banner.title') }}</h1>
                                    <sw-button :disabled="false"
                                               :square="false"
                                               :block="false"
                                               :isLoading="false"
                                               class="lgw-btn"
                                               target="_blank"
                                               :link="lengow_url">
                                        {{ $tc('lengow-connector.dashboard.banner.button') }}
                                    </sw-button>
                                </div>
                            </div>
                            <div class="lgw-row lgw-home-menu text-center">
                                <div class="lgw-col-4 lgw-box-link lgw-left-block">
                                    <routerLink :to="{ name: 'lengow.connector.export' }" tag='span'>
                                        <div class="lgw-box">
                                            <img :src="'connector/home-products.png' | asset" class="img-responsive">
                                            <h2>{{ $tc('lengow-connector.dashboard.products.title') }}</h2>
                                            <p>{{ $tc('lengow-connector.dashboard.products.desc') }}</p>
                                        </div>
                                    </routerLink>
                                </div>
                                <div class="lgw-col-4 lgw-box-link">
                                    <routerLink :to="{ name: 'lengow.connector.order' }" tag='span'>
                                        <div class="lgw-box">
                                            <img :src="'connector/home-orders.png' | asset" class="img-responsive">
                                            <h2>{{ $tc('lengow-connector.dashboard.orders.title') }}</h2>
                                            <p>{{ $tc('lengow-connector.dashboard.orders.desc') }}</p>
                                        </div>
                                    </routerLink>
                                </div>
                                <div class="lgw-col-4 lgw-box-link lgw-right-block">
                                    <routerLink :to="{ name: 'lengow.connector.settings' }" tag='span'>
                                        <div class="lgw-box">
                                            <img :src="'connector/home-settings.png' | asset" class="img-responsive">
                                            <h2>{{ $tc('lengow-connector.dashboard.settings.title') }}</h2>
                                            <p>{{ $tc('lengow-connector.dashboard.settings.desc') }}</p>
                                        </div>
                                    </routerLink>
                                </div>
                            </div>
                            <div class="lgw-row">
                                <div class="lgw-box">
                                    <h2>{{ $tc('lengow-connector.dashboard.help.title') }}</h2>
                                    <p>
                                        <routerLink class="lgw-router-link" :to="{ name: 'lengow.connector.contact' }">
                                            {{ $tc('lengow-connector.dashboard.help.contact') }}
                                        </routerLink>
                                    </p>
                                    <br/>
                                    <p>
                                        <a :href="$tc('lengow-connector.dashboard.help.helpCenterTarget')" target="_blank">
                                            {{ $tc('lengow-connector.dashboard.help.helpCenterLink') }}
                                        </a>
                                        {{ $tc('lengow-connector.dashboard.help.helpCenter') }}
                                    </p>
                                </div>
                            </div>
                            <lengow-footer>
                            </lengow-footer>
                        </div>
                    </div>
                </template>
            {% endblock %}
        </sw-page>
    </template>
    <template v-else-if="isNew && !isTrialExpired">
        <div class="lgw-container" v-if="isLoading">
            <sw-loader size="50px"></sw-loader>
        </div>
        <div v-else>
            <lgw-iframe-connexion></lgw-iframe-connexion>
        </div>
    </template>
    <template v-else-if="isTrialExpired">
        <div class="lgw-container" v-if="isLoading">
            <sw-loader size="50px"></sw-loader>
        </div>
        <div v-else>
            <lgw-free-trial-expired></lgw-free-trial-expired>
        </div>
    </template>
{% endblock %}
