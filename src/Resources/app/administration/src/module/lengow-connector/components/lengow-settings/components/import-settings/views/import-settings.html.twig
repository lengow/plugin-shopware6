{% block lengow_import_settings %}
    <template>
        <div class="lgw-settings-container">
            <div class="lgw-settings-block-title">
                <h3>|  {{ $tc('lengow-connector.settings.title.marketplaces') }}</h3>
            </div>
            <div class="lgw-settings-block">
                <sw-help-text class="lgw-help-text"
                              :text="$tc('lengow-connector.settings.lengow_import_settings.ship_mp_enabled.description')"
                              :width="200"
                              tooltipPosition="right"/>
                <sw-switch-field class="text-center"
                                 :label="$tc('lengow-connector.settings.lengow_import_settings.ship_mp_enabled.label')"
                                 v-model="lengowImportShipMpEnabled"
                                 @change="onSaveSettings($event, 'lengowImportShipMpEnabled')">
                </sw-switch-field>
                <sw-help-text class="lgw-help-text"
                              :text="$tc('lengow-connector.settings.lengow_import_settings.decrease_stock.description')"
                              :width="200"
                              tooltipPosition="right"/>
                <sw-switch-field class="text-center"
                                 :label="$tc('lengow-connector.settings.lengow_import_settings.decrease_stock.label')"
                                 v-model="lengowImportStockShipMp"
                                 @change="onSaveSettings($event, 'lengowImportStockShipMp')">
                </sw-switch-field>
            </div>
            <div class="lgw-settings-block-title">
                <h3>|  {{ $tc('lengow-connector.settings.lengow_import_settings.shipping.label') }}</h3>
            </div>
            <div class="lgw-settings-block" v-if="render">
                <div>
                    <sw-help-text class="lgw-help-text"
                                  :text="$tc('lengow-connector.settings.lengow_import_settings.shipping.description')"
                                  :width="200"
                                  tooltipPosition="right"/>
                    <sw-select-field v-for="salesChannel in salesChannels"
                                     :label="salesChannel.label"
                                     v-model="salesChannel.defaultShippingMethod"
                                     @change="onSaveSettings($event, 'lengowImportDefaultShippingMethod', salesChannel.salesChannelId)">
                        <template v-for="shippingMethod in shippingMethods">
                            <option v-if="salesChannel.salesChannelId === shippingMethod.salesChannelId"
                                    :value="shippingMethod.value">
                                {{ shippingMethod.name }}
                            </option>
                        </template>
                    </sw-select-field>
                </div>
            </div>
            <template v-else>
                <sw-loader size="50px"></sw-loader>
            </template>
            <div class="lgw-settings-block-title">
                <h3>|  {{ $tc('lengow-connector.settings.title.others') }}</h3>
            </div>
            <div class="lgw-settings-block">
                <sw-help-text class="lgw-help-text"
                              :text="$tc('lengow-connector.settings.lengow_import_settings.import_days.description')"
                              :width="200"
                              tooltipPosition="right"/>
                <sw-number-field numberType="int"
                                 :step="null"
                                 :min="1" :max="10"
                                 :value="lengowImportDays"
                                 :digits="2"
                                 :label="$tc('lengow-connector.settings.lengow_import_settings.import_days.label')"
                                 @change="onSaveSettings($event, 'lengowImportDays')">
                </sw-number-field>
                <lgw-conditionnal-string-field
                    :locked="lengowReportMailEnabled"
                    :fieldContent="lengowReportMailAddress"
                    :onSaveSettings="onSaveSettings"
                    fieldPlaceholder="exemple@info.fr;exemple2@info.fr"
                    :switchLabel="$tc('lengow-connector.settings.lengow_import_settings.report_mail_enabled.label')"
                    switchSettingsKey="lengowReportMailEnabled"
                    fieldSettingsKey="lengowReportMailAddress"
                    :fieldLabel="$tc('lengow-connector.settings.lengow_import_settings.report_mail_address.label')"
                    :helpText="$tc('lengow-connector.settings.lengow_import_settings.report_mail_address.description')">
                </lgw-conditionnal-string-field>
                <sw-help-text class="lgw-help-text"
                              :text="$tc('lengow-connector.settings.lengow_import_settings.currency_conversion_title.description')"
                              :width="200"
                              tooltipPosition="right"/>
                <sw-switch-field class="text-center"
                                 :label="$tc('lengow-connector.settings.lengow_import_settings.currency_conversion_title.label')"
                                 v-model="lengowCurrencyConversion"
                                 @change="onSaveSettings($event, 'lengowCurrencyConversion')">
                </sw-switch-field>
                <sw-help-text class="lgw-help-text"
                              :text="$tc('lengow-connector.settings.lengow_import_settings.debug_mode.description')"
                              :width="200"
                              tooltipPosition="right"/>
                <sw-switch-field class="text-center"
                                 :label="$tc('lengow-connector.settings.lengow_import_settings.debug_mode.label')"
                                 v-model="lengowDebugEnabled"
                                 @change="onSaveSettings($event, 'lengowDebugEnabled')">
                </sw-switch-field>
            </div>
        </div>
    </template>
{% endblock %}
